{
  "name": "dst-admin-windows",
  "version": "0.1.0",
  "author": "hujb",
  "description": "window 饥荒联机版开服管理工具",
  "private": true,
  "dependencies": {
    "@ant-design/pro-components": "^2.3.51",
    "@ant-design/pro-layout": "^7.5.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.2.2",
    "cross-env": "^7.0.3",
    "http-proxy-middleware": "^2.0.6",
    "localforage": "^1.10.0",
    "lua-json": "^1.0.1",
    "match-sorter": "^6.3.1",
    "node-cmd": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.1",
    "react-scripts": "5.0.1",
    "sort-by": "^1.2.0",
    "web-vitals": "^2.1.4",
    "xterm": "^5.1.0",
    "xterm-addon-fit": "^0.7.0",
    "electron-is-dev": "^2.0.0"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "packager": "npm run build && electron-builder"
  },
  "build" : {
    "extraResources":  {
        "from": "./dst_config",
        "to": "../dst_config"
    },
    "nsis": {
      "oneClick":false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^22.0.3",
    "wait-on": "^7.0.1",
    "electron-builder": "^23.6.0"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  }
}
